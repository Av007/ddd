# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build one`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t one`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system one && \
          adduser --system -G one one

COPY dist/apps/one one/
RUN chown -R one:one .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix one --omit=dev -f install

CMD [ "node", "one" ]
